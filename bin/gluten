#!/usr/bin/env node

var gluten = require('..'),
    program = require('commander'),
    fs = require('fs'),
    path = require('path'),
    pkg = require(path.resolve('package.json'));

program
	.version(require('../package.json').version)
	.usage('-c main.css -j app.js -o bundle')
	.option('-c, --css [file]', 'input CSS file', pkg.style)
	.option('-j, --js [file]', 'input JS file', pkg.main)
	.option('-o, --output [folder]', 'output folder', 'dist')
	.option('-jo, --jsout [file]', 'JS output file', 'dist/bundle.js')
	.option('-co, --cssout [file]', 'CSS output file', 'dist/bundle.css')
	.option('-w, --watch', 'watch files for changes', 'false', Boolean)
	.parse(process.argv)

if (program.js) {
	gluten.js({
		entry: program.js,
		output: program.jsout || path.resolve(program.output, 'bundle.js'),
		watch: program.watch,
		shim: Boolean(pkg['browserify-shim'])
	});
}

if (program.css) {
	gluten.css({
		entry: program.css,
		output: program.cssout || path.resolve(program.output, 'bundle.css'),
		watch: program.watch
	});
}





